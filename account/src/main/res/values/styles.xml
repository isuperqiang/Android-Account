<resources>

    <style name="TopView">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TopView.Title" parent="@style/TopView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/button_backward_selector</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="TopView.Button" parent="@style/TopView">
        <item name="android:layout_width">48dp</item>
        <item name="android:background">@drawable/button_backward_selector</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="pop_chart">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/btn_orange_style</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/pop_bg_color</item>
    </style>

    <style name="et_normal_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:dropDownHeight">100dp</item>
        <item name="android:textColor">@color/color_text_c7</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawableRight">@mipmap/icon_big_close</item>
        <item name="android:drawableEnd">@mipmap/icon_big_close</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="et_password_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:hint">密码</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:drawableRight">@mipmap/password_hide</item>
        <item name="android:drawableEnd">@mipmap/password_hide</item>
    </style>

    <style name="tab_menu_style">
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/nav_tab_text</item>
    </style>

    <style name="btn_normal_style">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_btn_login</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">40.0dip</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="label_login_small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_text_c10</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/common_width_w20</item>
        <item name="android:paddingBottom">@dimen/common_width_w20</item>
    </style>

    <style name="me_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="me_ll_style">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/bg_ll_state</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="image_more">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@mipmap/main_top_arrow</item>
    </style>

    <style name="info_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_text_c6</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ll_detail_style">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:background">@drawable/bg_ll_state</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="text_detail_style">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textColor">@color/color_text_c7</item>
    </style>

    <style name="btn_top_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_show</item>
        <item name="android:windowExitAnimation">@anim/pop_hide</item>
    </style>

    <style name="text_line_chart_list_header">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_text_c7</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_line_chart_list_item" parent="text_line_chart_list_header">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_show_label">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/actionbar_text_default</item>
    </style>
</resources>
