<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- 填充的颜色：这里设置背景透明 -->
            <solid android:color="@color/color_text_c15"/>
            <!-- 边框的颜色 ：不能和窗口背景色一样-->
            <stroke
                android:width="1dp"
                android:color="#ffffff"/>
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="4dp"/>

            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding
                android:bottom="3dp"
                android:left="8dp"
                android:right="8dp"
                android:top="3dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- 填充的颜色：这里设置背景透明 -->
            <solid android:color="@color/color_text_c15"/>
            <!-- 边框的颜色 ：不能和窗口背景色一样-->
            <stroke
                android:width="1dp"
                android:color="#ffffff"/>
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="4dp"/>

            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding
                android:bottom="3dp"
                android:left="8dp"
                android:right="8dp"
                android:top="3dp"/>
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- 填充的颜色：这里设置背景透明 -->
            <solid android:color="@color/white"/>
            <!-- 边框的颜色 ：不能和窗口背景色一样-->
            <stroke
                android:width="1dp"
                android:color="#ffffff"/>
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="4dp"/>

            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding
                android:bottom="3dp"
                android:left="8dp"
                android:right="8dp"
                android:top="3dp"/>
        </shape>
    </item>
</selector>